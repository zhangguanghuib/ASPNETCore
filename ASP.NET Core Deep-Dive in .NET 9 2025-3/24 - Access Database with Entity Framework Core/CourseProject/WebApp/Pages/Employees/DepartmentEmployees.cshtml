@page "{departmentId:int}"

@model WebApp.Pages.Employees.DepartmentEmployeesModel
@{
}

@section title_section
{
    <h3>Employees of Department: @Model.DepartmentName</h3>
}
<table class="table table-striped">
    <thread>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Salary</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thread>
    <tbody id="employee-list">        
        
        <vc:employee-list filter=""  department-id="@Model.DepartmentId"></vc:employee-list>
    </tbody>
</table>