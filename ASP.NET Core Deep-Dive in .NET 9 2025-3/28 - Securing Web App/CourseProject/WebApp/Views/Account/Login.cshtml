@using WebApp.Model
@model CredentialViewModel

@{
    ViewBag.Title = "Login";    
}

@section title_section {
    <h3>Login</h3>
}

<form method='post'
      asp-controller="Account"
      asp-action="Login">

    <div asp-validation-summary="All" class="text-danger">
    </div>
    
    <div class="row mb-3">
        <div class="col-2">
            <label class="col-form-label" asp-for="EmailAddress"></label>
        </div>
        <div class="col-6">
            <input asp-for="EmailAddress" class="form-control" />
            <span class="text-danger" asp-validation-for="EmailAddress"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label class="col-form-label" asp-for="Password"></label>
        </div>
        <div class="col-6">
            <input asp-for="Password" class="form-control" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
    </div>    

    <div class="row mb-3">
        <div class="col-2">
            <button type='submit' class="btn btn-primary">Login</button>            
        </div>
        <div class="col-6">            
        </div>
    </div>

</form>
