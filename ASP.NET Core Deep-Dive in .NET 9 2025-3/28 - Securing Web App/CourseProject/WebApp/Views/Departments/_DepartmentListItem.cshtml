@model Department

@if (Model is not null)
{
 
    <tr>
        <td>@Model.Name</td>
        <td>@Model.Description</td>
        <td><a class="btn btn-link" 
                asp-controller="Departments" 
                asp-action="Details" 
                asp-route-id="@Model.Id"
                asp-route-color="red"
                asp-route-size="big">Edit</a>
        </td>
    </tr>
        
}




