@model Department

<form method='post' action='/departments/@ViewBag.Action'>

    @if (ViewBag.Action == "edit")
    {
        <input type='hidden' name='Id' value='@Model.Id' />
    }        

    <div class="row mb-3">
        <div class="col-2">
            <label class="col-form-label">Name</label>
        </div>
        <div class="col-6">
            <input type='text' name='Name' value='@Model.Name' class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label class="col-form-label">Description</label>
        </div>
        <div class="col-6">
            <input type='text' name='Description' value='@Model.Description' class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <button type='submit' class="btn btn-primary">Save</button>
            &nbsp;&nbsp;
            <a href="/departments" class="btn btn-primary">Cancel</a>
        </div>
        <div class="col-4">
            @if (ViewBag.Action == "edit")
            {
                <a href="/employees/departmentemployees/@Model.Id" class="btn btn-link">Check Employees</a>
            }
        </div>
    </div>
</form>

<br/>




